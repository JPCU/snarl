{sys, [
       {lib_dirs, ["../apps/", "../deps/"]},
       {rel, "snarl", "0.3.1",
        [
         kernel,
         stdlib,
         sasl,
         snarl
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "snarl"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {app, sasl, [{incl_cond, include}]},
       {app, snarl, [{incl_cond, include}]}
      ]}.

{target_dir, "snarl"}.

{overlay_vars, "vars.config"}.

{overlay, [
           {mkdir, "data/ring"},
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {template, "files/snarl.xml", "etc/snarl.xml"},
           {template, "files/app.config", "etc/app.config.example"},
           {template, "files/vm.args", "etc/vm.args.example"},
           {template, "files/snarl", "bin/snarl"},
           {template, "files/snarl-admin", "bin/snarl-admin"}
           ]}.
